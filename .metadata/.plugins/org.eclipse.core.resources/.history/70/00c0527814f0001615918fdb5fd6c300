import java.io.File;
import java.util.ArrayList;
import java.util.Arrays;

public class test_console {
	public static void main(String[] args)
	{
		String filename = "data/confucius.txt";
		EfficientWordMarkov test = new EfficientWordMarkov(3);
		File f = new File(filename);
		String text = TextSource.textFromFile(f);
		test.setTraining(text);
		test.setSeed(643);
		String output = test.getRandomText(10);
		System.out.println(output);
	} 

}
